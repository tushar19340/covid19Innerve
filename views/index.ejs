        </div>
        <div class="row">
            <div class="col-3">
                <p class="text-center"><%= totalData.active  %> </p>
            </div>
            <div class="col-3">
                <p class="text-center"><%= totalData.confirmed  %> </p>
            </div>
            <div class="col-3">
                <p class="text-center"><%= totalData.recovered %> </p>
            </div>
            <div class="col-3">
                <p class="text-center"><%= totalData.deaths %> </p>
            </div>
        </div>

    </div>


    
    <div id="cases" class="container mt-5">
        <div class="row">
            <div class="col-12 col-sm-4 mb-5 mt-5">

                <form action="/" method="GET">
                    <select id="mySelect" name="state" class="btn btn-primary btn-lg">
        
                        <option value="">State</option>
                        <option value="India">India</option>
                        <option value="Delhi">Delhi</option>
                        <option value="Maharashtra">Maharashtra</option>
                        <option value="Karnataka">Karnataka</option>
                        <option value="Andhra Pradesh">Andhra Pradesh</option>
                        <option value="Uttar Pradesh">Uttar Pradesh</option>
                    </select>
                    <button type="submit" class="btn btn-info btn-lg" >GET</button>
                </form>

            </div>

            <div class="col-12 col-sm-8">
                
                <% statesData.forEach(function(data) { %>
                    <% if(data.state === state){ %>
                        <div id="stateData">
                            <h1 class="text-center" style="color: black;"><%= state %></h1>
                            <div>
                                <div class="row">
                                    <div class="col-6 text-center">
                                        <div id="active">
                                            <h1><%= data.active %></h1>
                                            <h5>ACTIVE</h5>
                                        </div>
                                    </div>
                                    <div class="col-6 text-center">
                                        <div id="confirmed">
                                            <h1><%= data.confirmed %></h1>
                                            <h5>CONFIRMED</h5>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-4">
                                    <div class="col-6 text-center">
                                        <div id="recovered">
                                            <h1><%= data.recovered %></h1>
                                            <h5>RECOVERED</h5>
                                        </div>
                                    </div>
                                    <div class="col-6 text-center">
                                        <div id="deaths">
                                            <h1><%= data.deaths %></h1>
                                            <h5>DEATHS</h5>
                                        </div>
                                    </div>
                                </div>
                                
                            </div>
                        </div>  

                    <% } %> 
                <% }) %>
                
            </div>
            
        </div>
        <h1 class="text-center my-5">Total Cases</h1>
        <div id="piechart"></div>
    </div>


